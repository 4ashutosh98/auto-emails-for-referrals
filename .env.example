# Copy this file to `.env` and fill in values.

# Core flags
DRY_RUN=true
DAILY_LIMIT=0

# LLM provider: openai | azure | github
LLM_PROVIDER=github

# GitHub Models (Copilot Pro)
# IMPORTANT: Use a GitHub Personal Access Token (PAT) from the account with Copilot access.
# Do NOT commit your token. Paste it into `.env` locally only.
LLM_GITHUB_TOKEN=ghp_xxx_your_pat_here
# Model to use (org/model). Good default:
LLM_GITHUB_MODEL=openai/gpt-4o-mini
# Endpoint (default already set in code; override if needed)
LLM_GITHUB_MODELS_ENDPOINT=https://models.github.ai/inference

# Optional general model override (default: gpt-4o-mini)
LLM_MODEL=gpt-4o-mini

# Core toggles
USE_LLM=true
VERBOSE=false
USE_SENT_LOG=false

# OpenAI (set if LLM_PROVIDER=openai)
OPENAI_API_KEY=

# Azure OpenAI (set if LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# GitHub Models refresh/debug logging for Google OAuth token refresh cycles
GOOGLE_REFRESH_DEBUG=false

# Pre-flight credential validation only (no sends)
PRECHECK=false

# Google Sheets config
# SHEETS_SPREADSHEET_ID=
# SHEETS_RANGE=Contacts!A:F
# SHEETS_HAS_HEADER=true
# SHEETS_STATUS_COLUMN=
# SHEETS_SENT_AT_COLUMN=

# Resume mapping (flags -> Drive file IDs or name:<filename>)
# RESUME_MAP={"ml":"<fileId1>","se":"<fileId2>"}
# RESUME_FOLDER_ID=
# RESUME_DEFAULT_NAME=Ashutosh Choudhari Resume.pdf
# RESUME_DEFAULT_ID=
# RESUME_PATH=Ashutosh_Choudhari_Resume.pdf

# Alert / reporting email (Gmail address that receives run summary)
ALERT_EMAIL=
ALERT_ON=error
ALERT_SUBJECT_PREFIX=[Referrals Bot]

# If you use Google Sheets for contacts (instead of CSV)
# SHEETS_SPREADSHEET_ID=your_google_sheet_id
# SHEETS_RANGE=Contacts!A:H
# SHEETS_HAS_HEADER=true

# Resume mapping from flags in your sheet to Google Drive file IDs (JSON or key:value pairs)
# RESUME_MAP={"ml":"<fileId1>","se":"<fileId2>"}
# RESUME_DEFAULT_ID=<fallback_drive_file_id>
